<% include partials/header %>
  <div class="container-fluid pb-3" style="background-color:#37354a">

    <div class="row mb-2" id="mainResultRow">
      <div class="col-lg-12" style="padding-bottom: 2%; padding-top:2%; background-color: #eee; color:#37354a; font-family:changa"">
        <button class="btn-dark btn-lg">Results:</button>
        <button class="btn-light btn-lg" style="font-family: Montserrat" >The emotional temperature of '<%= searchPhrase %>' is:  <span style="color:#7069ae; font-family: Changa; font-size:125%; font-weight: 400"><%= oneWordSentiment %></span></button>
      </div>
    </div>

    <div class="row mb-2" id="row1" style="margin-top:0">
      <div class="col-sm" style="background-image: linear-gradient(#7069ae, #595297)">
        <h4 style="padding-top: 1%; color:#fff;font-family:changa">Quick Look:</h4>
        <p style="color:#eee">Here is a quick overview of the data.</p>
        <ul class="list-group shadow-sm" style="margin-bottom: 2%">
          <li class="list-group-item">Sampled Tweets: <%= scores.length %></li>
          <li class="list-group-item">Average Sentiment: <%= avg %></li>
          <li class="list-group-item">Number of Positive Tweets: <%= numPosTweets %></li>
          <li class="list-group-item">Number of Negative Tweets: <%= numNegTweets %> </li>
          <li class="list-group-item">Number of Neutral Tweets: <%= numNeutralTweets %> </li>

        </ul>
      </div>
      <div class="col-lg" style="background-color:#eee">
        <h4 style="margin-top:1%; color:#7069ae;font-family:changa">Social Pulse:</h4>
        <iframe width="700" height="400" frameborder="0" scrolling="no" src="//plot.ly/~socialpulse/0.embed"></iframe>
      </div>
    </div>
    <!-- end of row div -->
    <div class="row" id="row2" style="margin-top:2%; margin-bottom-2%">
      <div class="col-sm" style="background-color:#8781bd">
        <h4 style="margin-top:2%; color:#fff;font-family:changa">Most Extreme Tweets:</h4>
        <ul class="list-group shadow-sm" style="margin-bottom: 2%">
          <li class="list-group-item">Most Positive Tweet: <%= extreme_tweets[0] %></li>
          <li class="list-group-item">Most Negative Tweet: <%= extreme_tweets[1] %></li>
          <li class="list-group-item">Most Neutral Tweet: <%= extreme_tweets[2] %></li>
        </ul>
      </div>
      <div class="col-lg" style="padding-top: 2%; background-color:#eee">
        <h4 style="margin-top:1%; color:#7069ae;font-family:changa">Negativity/Positivity Counts:</h4>
        <iframe width="700" height="400" frameborder="0" scrolling="no" src="//plot.ly/~socialpulse/9.embed"></iframe>
      </div>
    </div>
    <!-- end of row div -->
    <div class="row" id="row3" style="margin-top:2%; margin-bottom-2%">
      <div class="col-sm" style="background-color:#8781bd">
        <h4 style="margin-top:2%; color:#fff;font-family:changa">Emotional Words:</h4>
        <ul class="list-group shadow-sm" style="margin-bottom: 2%">
          <li class="list-group-item"><%= extreme_words[0] %>...<%= extreme_words[1] %>...<%= extreme_words[2] %>...<%= extreme_words[3] %>...<%= extreme_words[4] %>...<%= extreme_words[5] %>...<%= extreme_words[6] %>...<%= extreme_words[7] %>...<%= extreme_words[8] %>...<%= extreme_words[9] %>...<%= extreme_words[10] %>...<%= extreme_words[11] %>...<%= extreme_words[12] %>...</li>
          <li class="list-group-item"><%= extreme_words[16] %>...<%= extreme_words[17] %>...<%= extreme_words[18] %>...<%= extreme_words[19] %>...<%= extreme_words[20] %>...<%= extreme_words[21] %>...<%= extreme_words[22] %>...<%= extreme_words[23] %>...<%= extreme_words[24] %>...<%= extreme_words[25] %>...<%= extreme_words[26] %>...<%= extreme_words[27] %>...<%= extreme_words[28] %>...</li>
          <li class="list-group-item"><%= extreme_words[32] %>...<%= extreme_words[33] %>...<%= extreme_words[34] %>...<%= extreme_words[35] %>...<%= extreme_words[36] %>...<%= extreme_words[37] %>...<%= extreme_words[38] %>...<%= extreme_words[39] %>...<%= extreme_words[40] %>...<%= extreme_words[41] %>...<%= extreme_words[42] %>...<%= extreme_words[43] %>...<%= extreme_words[44] %>...</li>
          <li class="list-group-item"><%= extreme_words[13] %>...<%= extreme_words[14] %>...<%= extreme_words[15] %>...<%= extreme_words[29] %>...<%= extreme_words[30] %>...<%= extreme_words[31] %>...<%= extreme_words[45] %>...<%= extreme_words[46] %>...<%= extreme_words[47] %></li>
        </ul>
      </div>
      <div class="col-lg" style="padding-top: 2%; background-color:#eee">
        Put a general graph here..
      </div>
    </div>
    <!-- end of row div -->
    <div class="row" id="row3" style="margin-top:2%; margin-bottom-2%">
      <div class="col-sm-12" style="background-color:#eee">
        <h4 style="margin-top:1%; color:#7069ae;font-family:changa">Export Options</h4>
        <p>Export options go here</p>
      </div>
    </div>
    <!-- end of row div -->
  </div>
  <!-- end of container div -->


